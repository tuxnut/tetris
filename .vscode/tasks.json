{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tetris",
            "type": "shell",
            "command": "g++",
            "args": [
                "-W -std=c++11 *.cpp -lsfml-graphics -lsfml-window -lsfml-system -lsfml-audio -o main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run tetris",
            "type": "shell",
            "command": "./main",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}